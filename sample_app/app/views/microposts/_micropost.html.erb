<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><span style="color:blue">title</span> :<%= micropost.title %></span>
  <span class="content"><span style="color:blue">content</span> :<%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if micropost.created_at !=  micropost.updated_at%>Updated <%= time_ago_in_words(micropost.updated_at) %> ago.<% end %>
    <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
    <%= link_to "upadte", edit_micropost_path(micropost)%>
  </span>
</li>
