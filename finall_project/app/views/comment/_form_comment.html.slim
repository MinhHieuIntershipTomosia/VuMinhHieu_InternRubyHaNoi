h2.new-comment_title New Comment
form.new-comment-form.mt-3.mb-4 id="form-comment-#{thanks_card_id}"
  a.pull-left href="#" = gravatar_for(user)
  input type="hidden" name="thankscard_id" value=thanks_card_id
  div.form-group.col-xs-12.col-sm-9.col-lg-10.comment__input style="flex:1"
    textarea.form-control name="comment[message]" placeholder="Your message" required=""
  button.btn.btn-primary.comment-button type="submit" Comment

