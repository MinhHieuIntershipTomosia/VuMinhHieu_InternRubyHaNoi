<div class="col-lg-12 d-flex justify-content-center ">
  <div class="col-lg-6 d-flex flex-column align-items-center justify-content-center">
    <div class="py-2 px-4 border-bottom d-none d-lg-block bg-light mt-4 w-75">
      <div class="d-flex align-items-center py-1">
        <div class="position-relative">
          <%= gravatar_for @users_receiver.thanks_card.user%>
        </div>
        <div class="flex-grow-1 pl-3"> <strong><%= @users_receiver.thanks_card.user.full_name %></strong>
          <div class="text-muted small"><em>to: <%= @users_receiver.user.full_name %> , on:<%=@users_receiver.created_at.strftime("%d/%m/%Y")%></em></div>
        </div>
        <div> </div>
      </div>
    </div>
    <div class="container my-5">
      <div class="thanksCard">
        <%= render partial: 'thanks_card/thanks_card', locals: { thanks_card: @users_receiver.thanks_card } %>
      </div>
      <% if (@users_receiver.thanks_card.image.count != 0 && !@users_receiver.thanks_card.image.nil?) %>
        <div class="thanksCard__image">
          <p class="thanksCard__image-title">Images Send</p>
          <div class="d-flex flex-row justify-content-center bd-highlight mb-3 thanksCard__image-list">
            <% @users_receiver.thanks_card.image.each do |items| %>
              <div class="thanksCard__image-item col-3 list-inline-item">
                <div>
                  <div class="mb-4 d-flex justify-content-center">
                    <%= image_tag(items, class: "h-124 w-100", id: "img1")%>
                  </div>
                  <div class="d-flex justify-content-center">
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
