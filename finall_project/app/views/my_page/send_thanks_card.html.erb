<!--begin list send thanksCard -->
<div id="list-send-thanksCard" style="padding: 12px;">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body bg-primary text-white mailbox-widget pb-0">
          <h2 class="text-white pb-3">ThanksCard Send</h2>
        </div>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade active show" id="inbox" aria-labelledby="inbox-tab" role="tabpanel">
            <div>
              <div class="row p-4 no-gutters align-items-center">
                <div class="col-sm-12 col-md-6">
                  <h3 class="font-light mb-0">
                    <i class="ti-email mr-2"></i>
                    <%=@user_receivers.count%>
                    ThanksCard Send
                  </h3>
                </div>
                <div class="col-sm-12 col-md-6 justify-content-end d-flex">
                  <ul class="list-inline dl mb-0 float-left float-md-right">
                    <li class="list-inline-item text-info me-3">
                      <a href="#" class="text-decoration-none">
                        <button class="btn btn-circle btn-success text-white me-2" href="javascript:void(0)">
                          <i class="fa fa-plus"></i>
                        </button>
                        <span class="ml-2 font-normal text-dark">Compose</span>
                      </a>
                    </li>
                    <li class="list-inline-item text-danger">
                      <a href="#" class="text-decoration-none">
                        <button class="btn btn-circle btn-danger text-white me-2" href="javascript:void(0)">
                          <i class="fa fa-trash"></i>
                        </button>
                        <span class="ml-2 font-normal text-dark">Delete</span>
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
              <!-- Mail list-->
              <div class="table-responsive">
                <% if !@user_receivers.nil? %>
                  <table class="table email-table no-wrap table-hover v-middle mb-0 font-14">
                    <thead>
                      <!-- row -->
                      <tr>
                        <!-- label -->
                        <td class="p-3">
                          <div class="custom-control custom-checkbox">
                            <label class="custom-control-label">&nbsp;</label>
                          </div>
                        </td>
                        <!-- star -->
                        <td></td>
                        <td>
                          <span class="mb-0 text-dark fs-4" style="line-height:40px">User Receiver</span>
                        </td>
                        <!-- Message -->
                        <td>
                          <a class="link text-decoration-none" href="javascript: void(0)">
                            <span class="text-dark fs-4" style="line-height:40px">Title</span>
                          </a>
                        </td>
                        <!-- Attachment -->
                        <td>
                          <p class="fs-4 m-0" style="line-height:40px">Edit</p>
                        </td>
                        <!-- Time -->
                        <td class="text-dark fs-4" style="line-height:40px">Sent date</td>
                      </tr>
                    </thead>
                    <tbody>
                      <% @user_receivers.each do |items| %>
                        <!-- row -->
                        <tr>
                          <!-- label -->
                          <td class="p-3">
                            <div class="custom-control custom-checkbox">
                              <input class="form-check-input mt-0" type="checkbox" value=""
                                      aria-label="Checkbox for following text input">
                              <label class="custom-control-label" for="cst1">&nbsp;</label>
                            </div>
                          </td>
                          <!-- star -->
                          <td></td>
                          <td>
                            <span class="mb-0 text-dark"><%=items.user.full_name%></span>
                          </td>
                          <!-- Message -->
                          <td>
                            <a class="link text-decoration-none" href="javascript: void(0)">
                              <span class="text-dark"><%=items.thanks_card.title%></span>
                            </a>
                          </td>
                          <!-- Attachment -->
                          <td>
                            <%= link_to items, class: "text-decoration-none text-dark" do %>
                              <%= tag.i(class: "fa-solid fa-eye") %>
                            <% end %>
                            <%= link_to edit_thanks_card_path(items.thanks_card), class: "text-decoration-none text-dark ms-2 me-2" do %>
                              <%= tag.i(class: "fa-solid fa-pen") %>
                            <% end %>
                            <%= link_to items.thanks_card, method: :delete, data: { confirm: "You sure?" }, class: "text-decoration-none text-dark" do %>
                              <%= tag.i(class: "fa-sharp fa-solid fa-trash") %>
                            <% end %>                            
                          </td>
                          <!-- Time -->
                          <td class="text-muted"><%=items.created_at.strftime("%d/%m/%Y")%></td>
                        </tr>
                      <%end%>
                    </tbody>
                  </table>
                <% end %>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="sent" aria-labelledby="sent-tab" role="tabpanel">
            <div class="row p-3 text-dark">
              <div class="col-md-6">
                <h3 class="font-light">Lets check profile</h3>
                <h4 class="font-light">you can use it with the small code</h4>
              </div>
              <div class="col-md-6 text-right">
                <p>Donec pede justo, fringilla vel, aliquet nec, vulputate eget,
                  arcu. In enim justo, rhoncus ut,
                  imperdiet a.</p>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="spam" aria-labelledby="spam-tab" role="tabpanel">
            <div class="row p-3 text-dark">
              <div class="col-md-6">
                <h3 class="font-light">Come on you have a lot message</h3>
                <h4 class="font-light">you can use it with the small code</h4>
              </div>
              <div class="col-md-6 text-right">
                <p>Donec pede justo, fringilla vel, aliquet nec, vulputate eget,
                  arcu. In enim justo, rhoncus ut,
                  imperdiet a.</p>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="delete" aria-labelledby="delete-tab" role="tabpanel">
            <div class="row p-3 text-dark">
              <div class="col-md-6">
                <h3 class="font-light">Just do Settings</h3>
                <h4 class="font-light">you can use it with the small code</h4>
              </div>
              <div class="col-md-6 text-right">
                <p>Donec pede justo, fringilla vel, aliquet nec, vulputate eget,
                  arcu. In enim justo, rhoncus ut,
                  imperdiet a.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
