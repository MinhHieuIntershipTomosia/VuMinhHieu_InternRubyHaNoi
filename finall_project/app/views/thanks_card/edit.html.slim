#newThanksCard
  .newThanksCard__select.d-flex.align-items-center
    h2.newThanksCard__title
      | select option ThanksCard:
    ul.newThanksCard__list.d-flex
      |  <li id="1" class="newThanksCard__item btn btn-primary me-3 
      = 'active' if @thankscard.category_id == 1
      | ">ThanksCard Wendding
      |  <li id="2" class="newThanksCard__item btn btn-primary me-3 
      = 'active' if @thankscard.category_id == 2
      | ">ThanksCard Helping
      |  <li id="3" class="newThanksCard__item btn btn-primary me-3 
      = 'active' if @thankscard.category_id == 3
      | ">ThanksCard Cirtmast
  #newThanksCard__form
    .container.my-5.d-flex.justify-content-center
      = form_with(model: @thankscard, url: thanks_card_path, local: true, html: { class: "thanksCard", id: "thanksCard__form" }) do |f|
        = render 'error/error_message', object: f.object
        div
          = f.hidden_field :title ,id: "thankscard__title"
          = f.hidden_field :content , id: "thankscard__content"
          = f.hidden_field :description, id: "thankscard__description"
          = f.hidden_field :category   ,id: "thankscard__category_id"
          #thanksCard--selected
            = render partial: 'thanks_card/form_thanks_card', locals: { thanks_card: @thankscard }
        - if (@thankscard.image.count != 0 && !@thankscard.image.nil?)
          #thanksCard__image.thanksCard__image.position-relative
            p.thanksCard__image-title
              | Edit Images(Has 
              =@thankscard.image.count
              |  image)
            .d-flex.flex-row.justify-content-center.bd-highlight.mb-3.thanksCard__image-list
              = f.file_field :image, class: "d-none", multiple: true , id: "lstimage"
              = f.hidden_field :edit, id: "lstimage-edit"
              - @thankscard.image.each do |items|
                .thanksCard__image-item.col-3.list-inline-item
                  div
                    .mb-4.d-flex.justify-content-center
                      = image_tag(items, class: "h-124 w-100", id: "img#{items.id}" )
                    .d-flex.justify-content-center
                      = f.file_field :images, class: "form-control d-none customFile", id: "inputfile-#{items.id}"
            - if (@thankscard.image.count > 4)
              button.control.prev[type="button"]
                span.control-icon
                  i.fa-sharp.fa-solid.fa-chevron-left
              button.control.next[type="button"]
                span.control-icon
                  i.fa-solid.fa-chevron-right
        - else
          #thanksCard__image.thanksCard__image.position-relative
            p.thanksCard__image-title
              | Add Images
            #thanksCard__image-list.d-flex.flex-row.justify-content-center.bd-highlight.mb-3.thanksCard__image-list
              = f.file_field :image, class: "d-none", multiple: true , id: "lstimage"
              .thanksCard__image-item.col-3.list-inline-item
                div
                  .mb-4.d-flex.justify-content-center
                    = image_tag("https://mdbootstrap.com/img/Photos/Others/placeholder.jpg", class: "h-124 w-100")
                  .d-flex.justify-content-center
                    #btn-add-image.btn.btn-primary.btn-rounded
                      label.form-label.text-white.m-1[for="customFile"]
                        | Add Image
                      = f.file_field :images, class: "form-control d-none customFile", id: "customFile"
            button.control.prev[type="button" style="display: none"]
              span.control-icon
                i.fa-sharp.fa-solid.fa-chevron-left
            button.control.next[type="button" style="right: 170px; display: none"]
              span.control-icon
                i.fa-solid.fa-chevron-right
        .d-grid.gap-2
          button.btn.btn-primary[type="submit"]
            | Send
- #= javascript_include_tag "multi-selection.js"
= javascript_include_tag "getdata_thankscard.js"
= javascript_include_tag "select-option-thanksCard.js"
= javascript_include_tag "multi-select-tag.js"
- if (@thankscard.image.count != 0 && !@thankscard.image.nil?)
  = javascript_include_tag "get_image_edit.js"
  = javascript_include_tag "view_image_send.js"
- else
  = javascript_include_tag "create_new_image.js"
